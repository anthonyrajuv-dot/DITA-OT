<?xml version="1.0" encoding="UTF-8"?>
<vars xmlns="http://www.idiominc.com/opentopic/vars">

     <!-- [SP] Em dash for the 2nd-level list bullet. -->
     <variable id="Unordered List bullet level 2">&#x2012;</variable>

     <!-- [SP] Revision history variables. -->
     <variable id="revision_history_title">Revision history</variable>
     <variable id="revision_history_table">Table of Revisions</variable>
     <!-- These next four elements are used as column headers for the revision history table. -->
     <variable id="revision_history_date">Date</variable>
     <variable id="revision_history_page">Page</variable>
     <variable id="revision_history_changed">Changed</variable>
     <variable id="revision_history_rev">Rev</variable>
    
    <!-- Copyright and trademark page text. -->
    <variable id="Contact intro">For information, contact: </variable>
    
    <!-- Copyright line. -->
    <!-- Some require "All rights reserved." -->
    <variable id="Copyright statement">Copyright &#169; <param ref-name="year-set"/> <param ref-name="owner"/></variable>

    <!-- [SP] Added colon and space to Chapter, Appendix, and Part titles. -->
    <!-- Text to use for chapter titles.-->
    <!-- [SP] Changed "Chapter" to "Unit" -->
    <!--<variable id="Chapter with number">Unit&#160;<param ref-name="number"/>:&#160;</variable>-->
    <variable id="Chapter with number"/>
    <!-- xxxxx -->
    <!-- Text to use for appendix titles.-->
    <!--<variable id="Appendix with number">Appendix&#160;<param ref-name="number"/>:&#160;</variable>-->
    <variable id="Appendix with number"/>
    
    <!-- Text to use for part titles.-->
    <!--<variable id="Part with number">Part&#160;<param ref-name="number"/></variable>-->
    <variable id="Part with number"/>
    
    <!-- Override so that there's no string. -->
    <!-- The string used to label an preface within the table of contents. -->
    <variable id="Table of Contents Preface"></variable>
    
    <!-- Used in table titles when broken across a page break. -->
    <variable id="Continued"> (continued)</variable>
    
    <!-- No image for callouts.  -->
    <variable id="callout Note Image Path"></variable>
    <!-- No image for samples.  -->
    <variable id="sample Note Image Path"></variable>
    <!-- No image for notes.  -->
    <variable id="note Note Image Path"></variable>
    <!-- No image for cautions.  -->
    <variable id="caution Note Image Path"></variable>
    
        <!-- Images for watermarks -->
    <variable id="draft Watermark Image Path">Customization/OpenTopic/common/artwork/draft.svg</variable>
    <variable id="beta Watermark Image Path">Customization/OpenTopic/common/artwork/Beta.svg</variable>
    <variable id="none Watermark Image Path">Customization/OpenTopic/common/artwork/empty.png</variable>

<!-- For indexes, lowercased the word "see". -->
    <!--string before see element-->
    <variable id="Index See String">, see </variable>
    
    <!--string before see also element-->
    <variable id="Index See Also String">see also </variable>
    
</vars>
