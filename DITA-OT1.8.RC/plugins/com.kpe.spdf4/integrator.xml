<?xml version='1.0' encoding='UTF-8'?>
<project name="com.kpe.spdf4">

  <target name="dita2spdf4.init">
    <property name="customization.dir" location="${dita.plugin.com.kpe.spdf4.dir}/cfg"/>
  </target>
  <target name="dita2spdf4.debug" if="spdf4.debug">
     <echo>spdf4.debug is on: copying topic.fo to out folder. </echo>
     <copy file="${dita.temp.dir}${file.separator}topic.fo" todir="${dita.map.output.dir}"/>
     <copy todir="${dita.map.output.dir}${file.separator}Configuration">
        <fileset dir="${dita.temp.dir}${file.separator}Configuration"/>
     </copy>
     <copy todir="${dita.map.output.dir}${file.separator}Customization">
        <fileset dir="${dita.temp.dir}${file.separator}Customization"/>
     </copy>
  </target>

  <target name="dita2spdf4" depends="dita2spdf4.init, dita2pdf2,dita2spdf4.debug"/>
</project>
