<?xml version="1.0" encoding="UTF-8"?>
<project name="com.kpe.spdf5">
   
   <target name="dita2spdf5.init">
      <property name="customization.dir" location="${dita.plugin.com.kpe.spdf5.dir}/cfg"/>
      <condition property="answer.key.valid" value="true">
         <istrue value="${KPE.answer.key}"/>
<!--         <or>
            <not>
               <isset property="KPE.answer.key"/>
            </not>
         </or>-->
      </condition>
            
   </target>
   
   
   <target name="dita2spdf5.debug" if="spdf5.debug">
      <echo>spdf5.debug is on: copying topic.fo to out folder. </echo>
      <copy file="${dita.temp.dir}${file.separator}topic.fo" todir="${dita.map.output.dir}"/>
      <copy todir="${dita.map.output.dir}${file.separator}Configuration">
         <fileset dir="${dita.temp.dir}${file.separator}Configuration"/>
      </copy>
      <copy todir="${dita.map.output.dir}${file.separator}Customization">
         <fileset dir="${dita.temp.dir}${file.separator}Customization"/>
      </copy>
   </target>
   
   <target name="dita2spdf5" depends="dita2spdf5.init, dita2pdf2,dita2spdf5.debug"/>
</project>
